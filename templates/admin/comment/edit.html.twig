{% extends 'admin/base.html.twig' %}

{% block title %}modifier une annonce{% endblock %}

{% block body %}
<div class="container">
<h1 class="my-5">Modification du commentaire n°{{comment.id}}</h1>
<div class="card text-white bg-primary mb-3">
  <div class="card-body">
    <p class="card-text"><strong>Annonce liée : </strong> {{comment.ad.title}} </p>
    <p class="card-text"><strong>Autheur : </strong> {{comment.author.fullname}} </p>
    <p class="card-text"><strong>Date de création: </strong> {{comment.createdAt|date("d/m/Y")}} </p>
    <p class="card-text"><strong>note donnée : </strong>{{comment.rating}} </p>
  </div>
</div>

    {{form_start(form)}}
    {{form_widget(form)}}
    <button type="submit" class="btn btn-primary">Modifier</button>
    {{form_end(form)}}
</div>

{% endblock %}

