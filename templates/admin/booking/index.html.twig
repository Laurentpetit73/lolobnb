{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}
<div class="container-fluid">
<h1 class="y-5">Gezstion des annonces</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Locataire</th>
                <th>Annonce</th>
                <th class="text-center">Dur√©e</th>
                <th>Prix</th>
                <th >Action</th>
            </tr>
            <tbody>
            {% for booking in bookings %}
                <tr>
                    <td>{{booking.id}}</td>
                    <td>{{booking.createdAt|date('d/m/y')}}</td>
                    <td> 
                        <img src="{{booking.booker.picture}}" alt="" class="avatar avatar-micro mr-2"> 
                        {{booking.booker.fullName}}
                    </td>
                    <td>{{booking.ad.title}}</td>
                    <td class="text-center">{{booking.duration}}</td>
                    <td>{{booking.amount}}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('admin_bookings_edit',{'id':booking.id})}}"><i class="fas fa-edit"></i></a>
                        <a class="btn btn-danger" href="{{ path('admin_bookings_delete',{'id':booking.id})}}"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>

        </thead>
    </table>
</div>
{% endblock %}
