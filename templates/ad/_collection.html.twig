
{% block _ad_description_widget %}
<textarea id="area{{id}}" name="{{full_name}}" required="required" class="form-control" placeholder="{{attr.placeholder}}">{{value}}</textarea>
{% endblock %}


{% block _ad_content_widget %}
<textarea id="area{{id}}" name="{{full_name}}" required="required" class="form-control" placeholder="{{attr.placeholder}}">{{value}}</textarea>
{% endblock %}

{% block _ad_images_widget %}
<p> Ajouter votre propre image </p>
{{ form_widget(form) }}
<input type="hidden" id="widget_counter" value="0">   
<div class="form-group">
    <button type="button" id="add-image" class="btn btn-success"> Ajouter </button>
</div>

{% endblock %}

{% block _ad_images_entry_row %}
{{form_widget(form)}}
{% endblock %}

{% block _ad_images_entry_widget %}
<div class="form-group" id="block_{{id}}">
    <div class="row">
        <div class="col-10">
            <div class="row">
                <div class="col">
                    {{form_widget(form.url)}}
                    {{form_errors(form.url)}}
                </div>
                <div class="col">
                {{form_widget(form.caption)}}
                {{form_errors(form.caption)}}
                </div>
            </div>
        </div>
        <div class="col-2">
            <button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-primary"> Supprimer </button>
        </div>
    </div>
</div>

{% endblock %}