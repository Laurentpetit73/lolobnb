{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}
<div class="container">
    <form action="{{path('account_login')}}" method="post">
    <div class="row">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
            <div class="py-3 px-3 bg-light">
                <h1>Connexion</h1>
                {% if haserror %}
                    <div class="alert alert-danger">
                    Votre Email ou mot de passe est incorect
                    </div>
                {% endif %}
                <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse Mail" value="{{email}}" required>  
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Password" required> 
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Connexion</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">&nbsp;</div>
    </form>
</div>
   

{% endblock %}
